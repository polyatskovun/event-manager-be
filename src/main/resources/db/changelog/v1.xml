<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="vverba">
        <createTable tableName="demo">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="text"/>
            <column name="order_number" type="int"/>
        </createTable>

        <createTable tableName="sub">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="date" type="timestamp"/>
            <column name="demo_id" type="uuid">
                <constraints foreignKeyName="sub_demo_id_fk" references="demo(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>